{
  "name": "gh-2-local",
  "version": "0.1.0",
  "description": "CLI to sync and pull GitHub repositories into local storage",
  "license": "MIT",
  "keywords": [
    "github",
    "backup",
    "cli",
    "git",
    "sync"
  ],
  "bin": {
    "gh-2-local": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "npm run build --silent && node dist/cli.js",
    "test": "tsc -p tsconfig.test.json && node --test dist-test/**/*.test.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "better-sqlite3": "^11.8.1",
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
